{
  "name": "client",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/client",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/client"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/client"
        },
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "client:serve:development",
        "dev": true
      },
      "configurations": {
        "development": {
          "buildTarget": "client:serve:development",
          "dev": true
        },
        "production": {
          "buildTarget": "client:serve:production",
          "dev": false
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["apps/client/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "docker-build-dev": {
      "dependsOn": [],
      "command": "docker build -f Dockerfile.client --build-arg ENV_FILE=../../.env.serve.dev ."
    },
    "docker-build-prod": {
      "dependsOn": [],
      "command": "docker build -f Dockerfile.client --build-arg ENV_FILE=../../.env.serve.prod ."
    }
  }
}
